    <mockito.version>2.7.17</mockito.version>
    <dbunit.version>2.4.9</dbunit.version>
  </properties>

  <dependencies>
<!-- https://mvnrepository.com/artifact/mysql/mysql-connector-java -->
    
    <dependency>
